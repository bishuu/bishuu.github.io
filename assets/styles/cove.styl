html, body, .container
    height 100%
    width 100%
    overflow auto

body
    background-image url("../cove2.jpg")
    background-repeat no-repeat
    background-size cover
    background-position center

// Main panel width
size = 500px

.container
    max-width size
    min-width 275px
    width 100%

    // Center horizontally
    margin 0 auto

    display flex
    align-items center
    flex-direction column

    .logo
        width 100%
        height auto
        flex-grow 4

        background-image url("../logo.png")
        background-size contain
        background-position center
        background-repeat no-repeat

    .social
        width 85%
        height auto
        flex-grow 0.5

        display flex
        justify-content space-around

        .icon
            flex-shrink 1

            icon-size = 75px
            position relative

            height icon-size
            width icon-size
            background-size (icon-size * 2) (icon-size * 2) // Remove the extra padding
            background-position center center

            &.scloud
                background-image url("../s-icon.png")

            &.fbook
                background-image url("../f-icon.png")

            &.tweet
                background-image url("../t-icon.png")

*
    margin 0
    flex-shrink 0
